<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Trackit.App"
             xmlns:converters="clr-namespace:Trackit.App.Converters"
             x:Class="Trackit.App.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:ProjectToProjectNameConverter x:Key="ProjectToProjectNameConverter" />
            <converters:ActivityTypeToStringConverter x:Key="ActivityTypeToStringConverter" />
            <converters:GuidToColorConverter x:Key="GuidToColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
